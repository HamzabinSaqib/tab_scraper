{
    "manifest_version": 3,
    "name": "Tabs",
    "version": "1.0.0",
    "description": "Managing tabs has never been easier. Multiple Tab Selection, URL Extraction, Media Download, Save Tabs, Group Tabs, and much more.",
    "icons": {
        "16": "images/tabs-icon-16.png",
        "32": "images/tabs-icon-32.png",
        "48": "images/tabs-icon-48.png",
        "128": "images/tabs-icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/tabs-icon-16-def.png",
            "32": "images/tabs-icon-32-def.png",
            "48": "images/tabs-icon-48-def.png",
            "128": "images/tabs-icon-128-def.png"
        },
        "default_title": "Manage Tabs",
        "default_popup": "templates/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}